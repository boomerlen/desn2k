    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: Standard Test",
            "type": "debugpy",
            "request": "launch",
            "program": "python/image_generator.py",
            "console": "integratedTerminal",
            "args": "--infile assets/HL1_song11.wav --outfile python/HL1_song11.iso"
        }
    ]
}